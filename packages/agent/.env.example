# Xolotrain Agent Configuration
# Copy this to .env and fill in your values

# === Network Configuration ===
# Local Anvil fork of mainnet (default: http://127.0.0.1:8545)
MAINNET_FORK_RPC_URL=http://127.0.0.1:8545
CHAIN_ID=31337

# Uncomment for Sepolia testnet deployment
# SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_API_KEY
# SEPOLIA_CHAIN_ID=11155111

# Uncomment for Base Sepolia testnet deployment
# BASE_SEPOLIA_RPC_URL=https://base-sepolia.g.alchemy.com/v2/YOUR_API_KEY
# BASE_SEPOLIA_CHAIN_ID=84532

# === Agent Wallet ===
# Private key for agent wallet (needs ETH for gas)
# Generate with: cast wallet new
AGENT_PRIVATE_KEY=0x...

# === Deployed Contract Addresses (Local Fork) ===
# These addresses from your local deployment
PET_REGISTRY=0xB288315B51e6FAc212513E1a7C70232fa584Bbb9
EGG_HATCH_HOOK=0xEa0C0Cf8B9523E0f73dbe676AD5Be79146f28400
AUTO_LP_HELPER=0x21D9f055B7601f9b5B2e3aC0E2586b3FA5BbD1f3

# === Uniswap v4 Addresses (Mainnet Fork) ===
POOL_MANAGER=0x000000000004444c5dc75cB358380D2e3dE08A90
POSITION_MANAGER=0xbD216513d74C8cf14cf4747E6AaA6420FF64ee9e

# === Agent Configuration ===
# How often to check for health updates (milliseconds)
HEALTH_CHECK_INTERVAL=60000

# Minimum health change to trigger update (0-100)
MIN_HEALTH_CHANGE=5

# Gas configuration
MAX_GAS_PRICE_GWEI=100
GAS_LIMIT_HEALTH_UPDATE=100000

# === Logging ===
LOG_LEVEL=info
